extends layout

block content
  if msg
    p= msg
  else
    h2.header Create a new account on Brewtility.
    br
    form(method='post').col-md-5
      fieldset.form-group
        label(for="username") Full name
        input(id="username" type="text" placeholder="full name" name="fullname"  required=true).form-control
      fieldset.form-group  
        label(for="username") Username
        input(id="username" type="text" placeholder="username" name="username" required=true).form-control
      fieldset.form-group
        label(for="password") Password
        input(id="password" type="password" name="password" placeholder="password" required=true).form-control
      input(type="submit" value="Create account").btn.btn-lg.btn-primary.btn-block.outline
